<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mamun.citizenjournalism">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-feature android:name="android.hardware.camera2" android:required="true"></uses-feature>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name=".Camera" />
        <activity android:name=".ComplainList"/>
        <activity android:name=".EmergencyContact"/>
        <activity android:name=".Profile"/>
        <activity android:name=".Feedback"/>
        <activity android:name=".EmergencyPolice"
            android:label="Police"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"/>
        <activity android:name=".EmergencyFrireService"
            android:label="Fire Service"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"/>
    </application>

</manifest>